<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical" >

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/crystal_img_imgV"
        android:layout_width="250dp"
        android:layout_height="247dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />

    <HorizontalScrollView
        android:id="@+id/hsv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Filter9"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 1" />

            <Button
                android:id="@+id/Filter10"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 2" />

            <Button
                android:id="@+id/Filter11"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 3" />

            <Button
                android:id="@+id/Filter12"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 4" />
            <Button
                android:id="@+id/Filter13"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 5" />
            <Button
                android:id="@+id/Filter14"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Filter 6" />
            
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/save_crystal_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:layout_gravity="bottom"
        android:layout_weight="1" />
    
    <Button
        android:id="@+id/Undo_crystal_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:layout_gravity="bottom"
        android:layout_weight="1" />

</LinearLayout>